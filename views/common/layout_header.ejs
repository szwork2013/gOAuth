<style>
    .extend-row {
        margin: 0;
        height: 45px;
    }
    .extend-btn-menu {
        padding: 8px 8px;
    }
    .extend-btn-search {
        padding: 13px 10px;
    }
    .extend-btn-menu .dropdown-toggle .fa {
        font-size: 23px; 
        color: #5db2ff;
        margin-top: 8px;
    }
    .extend-btn-menu ul li {
        border-bottom: 1px solid #eee;
        padding: 6px;
    }
    .extend-btn-menu ul li a {
        color: #737373;
    }
    .extend-btn-title {
        padding: 10px;
    }
    .extend-btn-back {
        padding: 12px 0px;
    }
    .extend-text-search {
        padding: 5px;
        display: none;
    }
    .extend-fa-search {
        font-size: 20px; 
        color: #5db2ff;
        float:right;
    }
    .extend-widget-caption {
        font-size: 18px;
    }
    .extend-form-control {
        direction: initial;
        border-left: 0 !important;
        border-top: 0 !important;
        border-right: 0 !important;
        padding: 6px 12px 3px 12px;
        font-size: 16px;
    }
    .extend-glyphicon-arrow-left {
        white-space:nowrap;
        font-size: 20px; 
        color: #5db2ff;
        float: right;
    }
</style>
<div class="row extend-row">
    <% if (pagePath == '../page/home') { %>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 extend-btn-back"> 
            <span class="fa fa-home extend-glyphicon-arrow-left"></span>  
        </div>
        <div id="lblTitle" class="col-lg-10 col-md-10 col-sm-10 col-xs-10 extend-btn-title text-lef" style="text-align: left;"> 
            <span class="widget-caption" style="font-size: 18px;"><%=title%></span>
        </div>
        <div id="chat-link" class="col-lg-1 col-md-1 col-sm-1 col-xs-1 extend-btn-menu" style="text-align: left;padding: 9px 0px;box-shadow: none;">
        </div>
    <% } else{ %>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 extend-btn-back"> 
            <span class="fa fa-th extend-glyphicon-arrow-left"></span>  
        </div>
        <div id="lblTitle" class="col-lg-10 col-md-10 col-sm-10 col-xs-10 extend-btn-title text-left"> 
            <span class="widget-caption" style="font-size: 18px;"><%=title%></span>
        </div>
        <div id="btnMenu" class="col-lg-1 col-md-1 col-sm-1 col-xs-1 extend-btn-menu" style="text-align: left;padding: 9px 0px;box-shadow: none;"> 
        </div>             
    <% } %>
</div>